# Personal settings (name, email, signing key) in ~/.gitconfig.local
[include]
  path = ~/.gitconfig.local

[core]
  excludesfile = ~/.gitignore_global

[init]
  defaultBranch = main

[fetch]
  prune = true

[pull]
  rebase = true

[push]
  autosetupremote = true

[branch]
  sort = committerdate

[diff]
  algorithm = histogram

[merge]
  conflictstyle = diff3

[rebase]
  autostash = true

[color]
  ui = auto
[alias]
	cleanup = !git fetch -p && git branch -vv | grep ': gone]' | awk '{print $1}' | xargs git branch -D
